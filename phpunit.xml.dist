<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
        <testsuite name="Resourceful Test Suite">
            <directory>src/Resourceful/*/Test</directory>
            <directory>src/Silex/Provider/JsonSchema/Test</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>src</directory>
            <exclude>
                <directory>src/Resourceful/*/Test</directory>
                <directory>src/Silex/Provider/JsonSchema/Test</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
